#!/usr/bin/env bash

set -e

# 安装 vim-plug
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# 检查 ~/.vimrc 是否存在
if [ ! -f ~/.vimrc ]; then
  echo "[WARN] ~/.vimrc 不存在，请先配置好 vim 插件相关内容后再运行本脚本。"
  exit 1
fi

# 实时输出插件安装过程
echo "[INFO] 开始自动安装 Vim 插件..."

# 执行插件安装并捕获退出状态
if vim -E -s -u "$HOME"/.vimrc +PlugInstall +qall > /dev/null 2>&1; then
  echo "[OK] Vim 插件已自动安装完毕。"
else
  echo "[ERROR] Vim 插件安装失败，退出状态码: $?"
  echo "[INFO] 请检查网络连接和插件配置是否正确。"
  exit 1
fi