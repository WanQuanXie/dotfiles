#!/usr/bin/env bash

set -e

echo "Test hostname"
HOSTNAME=$(hostname)
test "$HOSTNAME" = "xiewq-macbookpro"

echo "Test brews"
test -x "$(which git)"
test -x "$(which nvim)"

echo "Test folders"
test -d ~/workspace/dev
test -d ~/workspace/work

echo "Test RCM symlinks"
test -s ~/.zshrc
test -s ~/.gitconfig
